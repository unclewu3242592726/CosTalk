syntax = "v1"

// 基础健康检查 API
info (
	title:   "Health API"
	desc:    "系统健康检查接口"
	version: "v1.0"
)

// 健康检查响应
type HealthResponse {
	Status  string `json:"status"`
	Service string `json:"service"`
	Version string `json:"version"`
}

@server(
	group: health
)
service costalk-api {
	// 健康检查
	@handler health
	get /v1/health returns (HealthResponse)
}